
import java.awt.Rectangle;

public class Tower extends Rectangle
{

	private static final long serialVersionUID = 1L;
	private int x, y, width,  height,  frameDisplayedOnHeight;

	//Tower(X Position,Y Position,Towers towertowerWidth)
	public Tower(int x,int width, int height, int frameDisplayedOnHeight)
	{
		this.x=x;
		this.y=frameDisplayedOnHeight-height-40;
		this.width=width;
		this.height=height;
		this.frameDisplayedOnHeight=frameDisplayedOnHeight;
		this.setBounds(x, y, width, height);
	}
	

	public double getX() 
	{
		return x;
	}

	public void setX(int x)
	{
		this.x = x;
	}

	public double getY() 
	{
		return y;
	}

	public void setY(int y)
	{
		this.y = y;
	}

	public double getWidth()
	{
		return width;
	}

	public void setWidth(int width) 
	{
		this.width = width;
	}

	public double getHeight() 
	{
		return height;
	}

	public void setHeight(int height) 
	{
		this.height = height;
		this.y=frameDisplayedOnHeight-height-40;
	}

	public int getFrameDisplayedOnHeight()
	{
		return frameDisplayedOnHeight;
	}

	public void setFrameDisplayedOnHeight(int frameDisplayedOnHeight) 
	{
		this.frameDisplayedOnHeight = frameDisplayedOnHeight;
	}

	
	



}
